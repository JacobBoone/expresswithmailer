extends layout

block content
	.container
		.jumbotron
			.container
				h1 How may i help you?
					p This is a sentance.
					a.btn.btn-primary.btn-lg(href='') Learn More &raquo
	.modal.fade(tabindex='-1', role='dialog', id='myModal', aria-labelledby='myModalLabel' )
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') Ã—
					h4.modal-title Contact Modal Form
				.modal-body
					form(action='index/send', name='contact', id='contact', method='post')
						div.form-group
							label(for='name') Name:
							input.form-control(name='name', type='text', placeholder='Name', id='name' required autofocus)
						div.form-group
							label(for='email') Email:
							input.form-control(name='email', type='email', placeholder='Email', id='email' required)
						div.form-group
							label(for='message') Message:
							textarea.form-control(name='message', placeholder='Message' id='message')
						div.form-group
							input.btn.btn-primary.btn-sm(name='submit', type='submit', value='Submit', id='submit')

						if(typeof msg !== 'undefined')
							if(!!err)
								p.err.bg-warning #{msg}
							else
								p.msgbox.success.bg-success #{msg}
				//- .modal-footer
					button.btn.btn-default(type='button', data-dismiss='modal') Close
					button.btn.btn-primary(type='button') Save changes